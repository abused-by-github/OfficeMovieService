@{
    Layout = "~/Views/Layout.cshtml";
}

@section Scripts
{
    <script type="text/javascript" src="~/Scripts/Poll.js"></script>
    <script type="text/javascript" src="~/Scripts/MovieList.js"></script>
    <script type="text/javascript" src="~/Scripts/PollInfo.js"></script>
    
    <script type="text/HTML" id="tmdbAutocompleteCredits">
        <li disabled class="ui-override-unselectable poweredByTmdb">Powered by <a href="http://www.themoviedb.org">http://www.themoviedb.org</a></li>
    </script>
}

@section MainContent
{
    <div>
        <div class="well well-lg">
            <span id="pollSummary">
                <span data-bind="visible: Id() && IsVoteable()">
                    Poll
                    <span data-bind="text: Name, visible: Id" class="label label-success"></span>
                    is going!
                    <span data-bind="visible: IsMine">
                        (You can <a href="JavaScript:void(0)" data-bind="click: edit">edit it</a>)
                    </span>
                    Try voting.
                    <span data-bind="visible: ExpirationDate.ui">
                        We vote untill <span data-bind="text: ExpirationDate.ui"></span>
                    </span>
                    <span data-bind="visible: ExpirationDate.ui() && ViewDate.ui()">and</span>
                    <span data-bind="visible: ViewDate.ui">
                        watch movie at <span data-bind="text: ViewDate.ui"></span>
                    </span>
                    <span data-bind="visible: MaxVotes() != '0'">
                        You have <span data-bind="text: MaxVotes"></span> vote<span data-bind="visible: MaxVotes() != '1'">s</span>.
                    </span>
                </span>
                <span data-bind="visible: Id() && !IsVoteable()">
                    Poll <span data-bind="text: Name"></span>
                    <span data-bind="visible: IsMine">
                        (You can <a href="JavaScript:void(0)" data-bind="click: edit">edit it</a>)
                    </span>
                    has finished.
                    <span data-bind="visible: Winner() && !HasBeenViewed()">
                        We will watch <span data-bind="text: Winner() && Winner().Name"></span>
                        <span data-bind="visible: ViewDate.ui">at <span data-bind="text: ViewDate.ui"></span>.</span>
                        <span data-bind="visible: !ViewDate.ui()">one time.</span>
                    </span>
                    <span data-bind="visible: Winner() && HasBeenViewed()">
                        We will discuss <span data-bind="text: Winner() && Winner().Name"></span>
                        <span data-bind="visible: DiscussionDate.ui">at <span data-bind="    text: DiscussionDate.ui"></span>.</span>
                        <span data-bind="visible: !DiscussionDate.ui()">one time.</span>
                    </span>
                    <span data-bind="visible: !Winner()">
                        No votes :(
                    </span>
                </span>
                <span data-bind="visible: !Id()">
                    No poll right now.
                    @if (User.Identity.IsAuthenticated)
                    {<text>
                         You can <a href="JavaScript:void(0)" data-bind="click: edit">add one</a>.
                     </text>}
                </span>
            </span>
            @if (User.Identity.IsAuthenticated)
            {
                <button data-bind="click: openPopup" id="addMovie" class="btn btn-success pull-right">Add Movie</button>
            }
        </div>
        <div id="scrollContainer" class="row col-md-9">
            <div data-bind="foreach: movies">
                <div class="col-md-4 movie">
                    <div class="thumbnail text-center">
                        <a data-bind="attr: { href: Url }" target="_blank"><img data-bind="attr: { src: ImageUrl }" width="150px" height="210px" /></a>
                        <div class="caption">
                            <p class="name">
                                <a data-bind="text: Name, attr: { href: Url }" target="_blank"></a>
                            </p>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="movie-toolbar-left" data-bind="visible: IsOwner">
                                    <button type="button" class="btn btn-default btn-xs" title="Edit"
                                            data-bind="click: $parent.edit">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </button>
                                    <button type="button" class="btn btn-default btn-xs" title="Delete"
                                            data-bind="click: $parent.deleteMovie">
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </button>
                                </div>
                                <div class="movie-toolbar-right" data-bind="visible: $parent.poll.IsVoteable">
                                    <div title="You already spent all you votes">
                                        <button type="button" class="btn btn-default btn-xs" title="Vote"
                                                data-bind="visible: !IsVoted(), disable: $parent.LeftVotes() == 0 || IsVoting, click: $parent.vote">
                                            <span class="glyphicon glyphicon-thumbs-up"></span>
                                        </button>
                                    </div>
                                    <button type="button" class="btn btn-default btn-xs" title="Unvote"
                                            data-bind="visible: IsVoted(), disable: IsVoting, click: $parent.unvote">
                                        <span class="glyphicon glyphicon-thumbs-down"></span>
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="text-center" style="margin-top: 20px">
                <span>
                    <span data-bind="text: movies().length"></span>
                    of <span data-bind="text: totalMovies"></span>
                    <span data-bind="visible: movies().length == 1">is</span>
                    <span data-bind="visible: movies().length != 1">are</span>
                    shown
                </span>
                <button id="loadMoreButton" type="button" class="btn btn-primary"
                        data-loading-text="Loading..."
                        data-bind="click: loadMore, visible: hasMoreMovies" >
                    More...
                </button>
                <button type="button" class="btn btn-primary disabled"
                        data-bind="visible: !hasMoreMovies()">
                    No more movies
                </button>
            </div>
        </div>
        <div id="votesContainer" class="col-md-3">
            <h3>Ratings:</h3>
            <table id="ratedMovies" data-bind="foreach: Movies" style="display: none;">
                <tr>
                    <td data-bind="text: Name"></td>
                    <td style="white-space: nowrap;">
                        <span data-bind="text: Voters.length"></span>&nbsp;
                        <div class="glyphicon glyphicon-user tooltipVoters">
                            <div class="classic">
                                Voters:
                                <ul data-bind="foreach: Voters">
                                    <li data-bind="text: $data"></li>
                                </ul>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
            <div id="noMovies" style="display: none;">No votes yet</div>
            
            <div style="margin-top: 20px;">
                <a class="twitter-timeline" href="https://twitter.com/search?q=%23MovieClub" data-widget-id="387961244990197760">Tweets about "#MovieClub"</a>
                <script>
                    !function(d, s, id) {
                        var js, fjs = d.getElementsByTagName(s)[0],
                            p = /^http:/.test(d.location) ? 'http' : 'https';
                        if (!d.getElementById(id)) {
                            js = d.createElement(s);
                            js.id = id;
                            js.src = p + "://platform.twitter.com/widgets.js";
                            fjs.parentNode.insertBefore(js, fjs);
                        }
                    }(document, "script", "twitter-wjs");
                </script>
            </div>
        </div>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div id="saveDialog" data-bind="with: currentMovie">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label for="txtName" class="col-lg-2 control-label">Name*</label>
                    <div class="col-lg-10">
                        <input type="hidden" data-bind="value: TmdbId" id="tmdbId" />
                        <input type="hidden" data-bind="value: TmdbUrl" id="tmdbUrl" />
                        <input type="text" class="form-control" id="txtName"
                            data-bind="value: Name, autocomplete: {
                                                    source: $parent.tmdbAutocomplete,
                                                    credits: 'tmdbAutocompleteCredits',
                                                    minLength: 3,
                                                    values: { id: TmdbId, title: Name, poster_path: TmdbUrl },
                                                    labelKey: 'title'}" />
                        <span class="help-block" data-bind="visible: TmdbId">
                            Provided by <a href="http://www.themoviedb.org">http://www.themoviedb.org</a>
                            | <a class="red" href="javaScript:void(0)" data-bind="click: clearTmdb">Clear</a>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="txtUrl" class="col-lg-2 control-label">URL*</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="txtUrl"
                               data-bind="value: Url, disable: TmdbId" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="txtImageUrl" class="col-lg-2 control-label">Image URL*</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="txtImageUrl"
                               data-bind="value: CustomImageUrl, disable: TmdbId" />
                        <span class="help-block">Image will be stretched to 150x210 px</span>
                    </div>
                </div>
                <button data-bind="click: $parent.save" class="btn btn-default">Save</button>
                <button data-bind="click: $parent.cancelDialog" class="btn btn-default">Cancel</button>
            </form>
        </div>
        <div id="editPollContainer" style="display: none" class="overflow-hidden">
            <form class="form-horizontal" novalidate name="filterForm">
                <div class="row">
                    <div class="form-group">
                        <label class="col-md-6">Name:</label>
                        <div class="col-md-6">
                            <input type="text" data-bind="value: Name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-6">Poll will be closed at:</label>
                        <div class="col-md-6">
                            <input type="text" data-bind="value: ExpirationDate.ui, dateTimePicker: true" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-6">We watch movie at:</label>
                        <div class="col-md-6">
                            <input type="text" data-format="date" data-bind="value: ViewDate.ui, dateTimePicker: true" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-6">Discussion at:</label>
                        <div class="col-md-6">
                            <input type="text" data-format="date" data-bind="value: DiscussionDate.ui, dateTimePicker: true" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <button class="btn btn-default" data-bind="click: save">Save</button>
                    <button class="btn btn-danger" data-bind="click: cancel, visible: Id">Delete</button>
                </div>
            </form>
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.LastError))
    {
        <div id="errorDiv" class="authError">
            @ViewBag.LastError
        </div>
    }
}